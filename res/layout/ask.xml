<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Enter your Question and Choose Friends to Ask Question"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:ems="0"
        android:inputType="textMultiLine"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:text="Clear"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pickFriendsButton"
        android:layout_width="141dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose Friends"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OR"
        android:textSize="12sp" />

    <Button
        android:id="@+id/friendsloc"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:text="Choose Friend&apos;s Location"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="wrap_content"
        android:layout_height="244dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_weight="0.47" >

    </ListView>

    <Button
        android:id="@+id/buttonPost"
        android:layout_width="299dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:text="Ask Question"
        android:textSize="12sp" />
    <Button
        android:id="@+id/previous_answers"
        android:layout_width="299dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:text="View Answers"
        android:textSize="12sp" />

</LinearLayout>